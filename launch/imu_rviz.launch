<launch>
    <rosparam file="$(find hipnuc_imu)/config/hipnuc_config.yaml" command="load"	/>
	<node pkg="hipnuc_imu" name="serial_imu" type="serial_imu" output="screen" />
	
	<!-- 靜態 TF：發布 map -> odom 固定轉換（可選，用於在 RViz 中使用 map 作為固定框架）-->
	<node pkg="tf2_ros" type="static_transform_publisher" name="map_to_odom" 
		  args="0 0 0 0 0 0 map odom" />
	
	<node pkg="rviz" name="rviz_chaohe_imu" type="rviz" />

</launch>
